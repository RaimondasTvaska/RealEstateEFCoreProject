@model CompanyModel

@using (Html.BeginForm("Add", "Company", FormMethod.Post))
{
    @Html.LabelFor(s => s.CompanyName)
    @Html.TextBoxFor(s => s.CompanyName)

    @Html.LabelFor(s => s.City)
    @Html.TextBoxFor(s => s.City)

    @Html.LabelFor(s => s.Street)
    @Html.TextBoxFor(s => s.Street)

    @Html.LabelFor(s => s.HouseFlatNumber)
    @Html.TextBoxFor(s => s.HouseFlatNumber)

    @Html.LabelFor(x => x.Brokers)
    @Html.ListBoxFor(x => x.BrokerIds, new MultiSelectList(Model.Brokers, "Id", "FullName"), new { multiple = "multiple", @class = "form-control" })
    <input type="submit" value="Submit" />
}
