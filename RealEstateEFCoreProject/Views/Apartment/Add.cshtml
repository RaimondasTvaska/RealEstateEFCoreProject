@model ApartmentModel

@using (Html.BeginForm("Add", "Apartment", FormMethod.Post))
{
    @Html.LabelFor(s => s.City)
    @Html.TextBoxFor(s => s.City)

    @Html.LabelFor(s => s.Street)
    @Html.TextBoxFor(s => s.Street)

    @Html.LabelFor(s => s.HouseNo)
    @Html.TextBoxFor(s => s.HouseNo)

    @Html.LabelFor(s => s.FlatNo)
    @Html.TextBoxFor(s => s.FlatNo)

    @Html.LabelFor(s => s.FlatFloor)
    @Html.TextBoxFor(s => s.FlatFloor)

    @Html.LabelFor(s => s.BuildingFloors)
